@using Goomer.Web.Models.Rims
@using Goomer.Services.Web
@model IEnumerable<ListingRimViewModel>

@{
    ViewBag.Title = "PartialRims";
    var identifierProvider = new IdentifierProvider();
}

@foreach (var rim in Model)
            {
    <div style="margin-bottom:50px" class="row">
        <div class="col-sm-7 col-sm-offset-2">
            <div class="image-tile outer-title text-center">
                <a href="/Rims/RimAd?id=@identifierProvider.EncodeId(rim.Id)">
                    <img alt="Pic" class="product-thumb" src="@rim.Pictures.First().Url" />
                </a>
                <div class="title" style="display:inline-block">
                    <h3 class="mb0">
                        @rim.Brand @rim.Model <b>@rim.Price лв.</b>
                    </h3>
                    <span style="width:450px" class="mb16 display-block">Последно Коригирана: @rim.ModifiedOn </span>
                    <span style="width:450px" class="mb16 display-block">Местоположение: @rim.Siting </span>
                    <span style="width:450px" class="mb16 display-block">Състояние: @( rim.IsBrandNew ? " Нови" : " Употребявани" )</span>

                </div>
            </div>

        </div>
    </div>
}