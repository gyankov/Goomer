@using Goomer.Web.Models.Tires
@using Goomer.Services.Web
@model IEnumerable<ListingTireViewModel>

@{
    ViewBag.Title = "Listing";
    var identifierProvider = new IdentifierProvider();
}

<section class="page-title page-title-4 bg-secondary">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h3 class="uppercase mb0">
                    <i class="ti-pencil-alt"></i> Търсене
                </h3>
            </div>
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</section>
@if (Model.Count() > 0)
{
    <section>
        <div class="container">
            @foreach (var tire in Model)
            {
                <div class="row">
                    <div class="col-sm-7 col-sm-offset-2">
                        <div class="image-tile outer-title text-center">
                            <a href="/Tires/TireAd?id=@identifierProvider.EncodeId(tire.Id)">
                                <img alt="Pic" class="product-thumb" src="@tire.Pictures.First().Url" />
                            </a>
                            <div class="title" style="display:inline-block">
                                <h3 class="mb0">
                                    @tire.Brand @tire.Model <b>@tire.Price лв.</b>
                                </h3>
                                <span class="mb16 display-block">Последно Коригирана: @tire.ModifiedOn </span>
                                <span class="mb16 display-block">Местоположение: @tire.Siting </span>
                                <span class="mb16 display-block">Състояние: @( tire.IsBrandNew ? " Нови" : " Употребявани" )</span>

                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </section>
}
else
{
    <section>
        <div class="row">
            <div class="col-sm-12 text-center">
                <h5 class="uppercase text-center">Няма намерени резултати.</h5>
            </div>
        </div>
    </section>

}
