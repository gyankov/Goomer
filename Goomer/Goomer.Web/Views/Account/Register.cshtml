@model Goomer.Web.Models.Account.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<section class="cover fullscreen image-bg overlay">
    <div class="container v-align-transform">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="feature bordered text-center">
                    <h4 class="uppercase">Регистрация</h4>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Е-майл" })

                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола" })

                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Потвърди парола" })

                        <input type="submit" class="btn btn-default" value="Регистрирай ме" />
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
